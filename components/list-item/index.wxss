/* components/list-item/index.wxss */
.list-item-container {
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: #e3e3e3 solid 0.01rpx;
  background-color: white;
}
.list-item-container text {
  margin-left: 30rpx;
  color: gray;
  font-size: small;
}
.list-item-container image {
  width: 130rpx;
  height: 130rpx;
}
.list-item-container .arrow {
  position: absolute;
  right: 30rpx;
}
