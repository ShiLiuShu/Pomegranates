<page-meta>
    <navigation-bar title="石榴屋"/>
</page-meta>
<van-sticky>
    <view class="home-top">
        <van-search value="{{ value }}" placeholder="搜索单品" />
    </view>
    <view class = 'classify'>
        <van-tabs   line-width="0" class='van-tab' bind:change="toOtherPage">
            <van-tab title="{{item.name}}" wx:for="{{tabInfo}}" ></van-tab>
        </van-tabs>
    </view>
</van-sticky>
<view class = 'recommend'>
    <swiper class='recomend-swiper' indicator-dots='true' autoplay='true' height="20%">
        <swiper-item wx:for="{{banners}}">
            <image src='{{item.src}}'></image>
        </swiper-item>
    </swiper>
</view>
<view class = 'commodityList'>
    <van-grid column-num="2" gutter="1rpx">
        <van-grid-item use-slot name="text" wx:for="{{commodityList}}" bindtap="gotoCommodityDetail">
            <view class='commodityInfo'>
                <!-- 图片 -->
                <view class="img">
                    <van-image fit="cover" width="300rpx" height="300rpx" src="{{item.img}}"></van-image>
                </view>
                <!-- 商品描述 -->
                <view class='describe van-multi-ellipsis--l2'>
                    {{item.describe}} 
                </view>
                <van-row>
                    <!-- 价格 -->
                    <van-col class='price'>¥{{item.price}}</van-col>
                    <!-- 销量 -->
                    <van-col class='salesNum'>{{item.salesNum}}付款</van-col>
                </van-row>
            </view>
        </van-grid-item>
    </van-grid>
</view>
